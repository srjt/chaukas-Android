<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rowComment"
    android:background="#cac7c7">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dip">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:id="@+id/tvUserPic"
            android:text="F"
            android:background="@drawable/rounded_corner"
        />

        <TableLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dip">
            <TableRow android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="This is really long comment, very long you wont even believe. You might believe but its hard for me"
                    android:id="@+id/tvComment"
                    android:textColor="@color/colorText" />
            </TableRow>
            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="This is the very very very long date"
                    android:id="@+id/tvDate"
                    android:textSize="10dip"
                    android:textIsSelectable="true"
                    android:singleLine="true"
                    android:textColor="@color/colorText"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</TableRow>
